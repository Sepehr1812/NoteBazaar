<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.AppCompat.Title.Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">@dimen/dimen_28</item>
        <item name="fontFamily">@font/iransansmobile</item>
    </style>

    <style name="TextAppearance.AppCompat.Date">
        <item name="color">@color/gray</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">@dimen/dimen_20</item>
        <item name="fontFamily">@font/iransansmobile</item>
    </style>

    <style name="TextAppearance.AppCompat.Content">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">@dimen/dimen_28</item>
        <item name="fontFamily">@font/iransansmobile</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.Dialog">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">@dimen/dimen_28</item>
        <item name="fontFamily">@font/iransansmobile</item>
    </style>

    <style name="TextAppearance.AppCompat.Content.Dialog">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">@dimen/dimen_24</item>
        <item name="fontFamily">@font/iransansmobile</item>
    </style>

    <style name="Widget.MaterialComponents.Button.Primary">
        <item name="cornerRadius">@dimen/dimen_6</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="lineHeight">@dimen/dimen_24</item>
        <item name="fontFamily">@font/iransansmobile</item>
    </style>

    <style name="Widget.MaterialComponents.Button.Secondary">
        <item name="cornerRadius">@dimen/dimen_6</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/purple</item>
        <item name="lineHeight">@dimen/dimen_24</item>
        <item name="fontFamily">@font/iransansmobile</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.AdapterTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">@dimen/dimen_18</item>
        <item name="fontFamily">@font/iransansmobile</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.AdapterSubtitle">
        <item name="color">@color/gray</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">@dimen/dimen_16</item>
        <item name="fontFamily">@font/iransansmobile</item>
    </style>

</resources>